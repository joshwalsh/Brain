<ul class="connections-list">
  <% atom.parent_connections.each do |connection| %>
    <%= render partial: "connections/connection_child", locals: {connection: connection} %>
  <% end %>

  <li>
    <%= form_for Connection.new do |f| %>
      <%= f.hidden_field :parent_atom_id, value: atom.id %>
      <%= f.fields_for Atom.new do |a| %>
        <%= a.text_field :title, { autocomplete: 'off', class: 'input-list-add' } %>
      <% end %>
    <% end %>
  </li>
</ul>
