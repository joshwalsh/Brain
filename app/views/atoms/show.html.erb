<h1><%= @atom.title %></h1>

<%= form_for @atom do |f| %>
  <%= f.text_field :title %>
  <%= f.submit "Rename" %>
<% end %>

<h2>Parent Connections</h2>
<ul>
  <% @atom.parents.each do |parent| %>
    <li><%= link_to parent.title, parent %></li>
  <% end %>
  <li>
    <%= form_for Connection.new do |f| %>
      <%= f.hidden_field :child_atom_id, value: @atom.id %>
      <%= f.fields_for Atom.new do |a| %>
        <%= a.text_field :title %>
      <% end %>
      <%= f.submit "Add" %>
    <% end %>
  </li>
</ul>

<h2>Child Connections</h2>
<ul>
  <% @atom.children.each do |child| %>
    <li><%= link_to child.title, child %></li>
  <% end %>
  <%= form_for Connection.new do |f| %>
    <%= f.hidden_field :parent_atom_id, value: @atom.id %>
    <%= f.fields_for Atom.new do |a| %>
      <%= a.text_field :title %>
    <% end %>
    <%= f.submit "Add" %>
  <% end %>
</ul>

<h2>Sibling Connections</h2>
<ul>
  <% @atom.siblings.each do |sibling| %>
    <li><%= link_to sibling.title, sibling %></li>
  <% end %>
</ul>

<%= link_to "delete", @atom, method: :delete %>
