<div class="jumbotron">
  <h1 class="display-3"><%= @atom.title %></h1>
  <p class="lead">Influences <strong><%= @atom.influence %>%</strong> of brain.</p>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Parents:</h2>
      <ol class="list-group">
        <% @atom.parents.each do |atom| %>
          <li class="list-group-item">
            <%= link_to atom.title, atom %>
          </li>
        <% end %>
      </ol>
    </div>
    <div class="col">
      <h2>Siblings:</h2>
      <ol class="list-group">
        <% @atom.siblings.each do |atom| %>
          <li class="list-group-item">
            <%= link_to atom.title, atom %>
          </li>
        <% end %>
      </ol>
    </div>
    <div class="col">
      <h2>Children:</h2>
      <ol class="list-group">
        <% @atom.children.each do |atom| %>
          <li class="list-group-item">
            <%= link_to atom.title, atom %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>

  <%= @atom.description %>
</div>
