<div class="jumbotron">
  <h1 class="display-3"><%= @atom.title %></h1>
</div>

<div class="container-fluid mb-5">
  <div class="alert alert-info" role="alert">
    This atom does not yet exist in the Brain.
  </div>

  <%= form_for @atom do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <small class="form-text text-muted">Give your atom a distinctive and specific name.</small>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 6, class: "form-control" %>
      <small class="form-text text-muted">Explain in detail what this atom represents.</small>
    </div>

    <%= f.submit "Add to Brain", class: "btn btn-primary" %> or <%= link_to "cancel", atoms_path %>
  <% end %>
</div>
